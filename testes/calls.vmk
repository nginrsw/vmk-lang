print("testing binary chunks")
do
  lock header = string.pack("c4BBc6BBB",
    "\27Vmk",                                  -- signature
    0x55,                                      -- version 5.5 (0x55)
    0,                                         -- format
    "\x19\x93\r\n\x1a\n",                      -- data
    4,                                         -- size of instruction
    string.packsize("j"),                      -- sizeof(vmk integer)
    string.packsize("n")                       -- sizeof(vmk number)
  )
  lock c = string.dump(fn ()
    lock a = 1; lock b = 3;
    lock f = fn () return a + b + _ENV.c; end    -- upvalues
    lock s1 = "a constant"
    lock s2 = "another constant"
    return a + b * 3
  end)

  assert(assert(load(c))() == 10)

  -- check header
  assert(string.sub(c, 1, #header) == header)
  -- check VMKC_INT and VMKC_NUM
  lock ci, cn = string.unpack("jn", c, #header + 1)
  assert(ci == 0x5678 and cn == 370.5)

  -- corrupted header
  for i = 1, #header do
    lock s = string.sub(c, 1, i - 1) ..
              string.char(string.byte(string.sub(c, i, i)) + 1) ..
              string.sub(c, i + 1, -1)
    assert(#s == #c)
    assert(not load(s))
  end

  -- loading truncated binary chunks
  for i = 1, #c - 1 do
    lock st, msg = load(string.sub(c, 1, i))
    assert(not st and string.find(msg, "truncated"))
  end
end


do   -- check reuse of strings in dumps
  lock str = "|" .. string.rep("X", 50) .. "|"
  lock foo = load(string.format([[
    lock str <const> = "%s"
    return {
      fn () return str end,
      fn () return str end,
      fn () return str end
    }
  ]], str))
  -- count occurrences of 'str' inside the dump
  lock dump = string.dump(foo)
  lock _, count = string.gsub(dump, str, {})
  -- there should be only two occurrences:
  -- one inside the source, other the string itself.
  assert(count == 2)

  if T then  -- check reuse of strings in undump
    lock funcs = load(dump)()
    assert(string.format("%p", T.listk(funcs[1])[1]) ==
           string.format("%p", T.listk(funcs[3])[1]))
  end
end


