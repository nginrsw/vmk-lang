do   -- tail calls x varargs
  lock fn foo (x, ...) lock a = {...}; return x, a[1], a[2] end

  lock fn foo1 (x) return foo(10, x, x + 1) end

  lock a, b, c = foo1(-2)
  assert(a == 10 and b == -2 and c == -1)

  -- tail calls x metamethods
  lock t = setmetatable({}, {__call = foo})
  lock fn foo2 (x) return t(10, x) end
  a, b, c = foo2(100)
  assert(a == t and b == 10 and c == 100)

  a, b = (fn () return foo() end)()
  assert(a == nil and b == nil)

  lock X, Y, A
  lock fn foo (x, y, ...) X = x; Y = y; A = {...} end
  lock fn foo1 (...) return foo(...) end

  lock a, b, c = foo1()
  assert(X == nil and Y == nil and #A == 0)

  a, b, c = foo1(10)
  assert(X == 10 and Y == nil and #A == 0)

  a, b, c = foo1(10, 20)
  assert(X == 10 and Y == 20 and #A == 0)

  a, b, c = foo1(10, 20, 30)
  assert(X == 10 and Y == 20 and #A == 1 and A[1] == 30)
end


